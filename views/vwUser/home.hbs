<main class="container-fluid">
    <div id="container" class="row d-flex justify-content-center">
        <div id="main-news" class="col-md-9">
            <div class="container mt-4">
                <h4 class="mb-3 text-primary">Tin nổi bật</h4>
                {{#if highlightedPosts}}
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div id="featured-news" class="carousel-inner">
                        {{#each highlightedPosts}}
                            <div class="carousel-item {{#if @first}}active{{/if}}">
                                <div class="card">
                                    <div class="row no-gutters">
                                        <div class="col-md-4">
                                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}">
                                                <img src="/public/posts/imgs/{{this.id}}/thumbnail.jpg" class="img-fluid rounded-left" style="height: 100%; object-fit: cover;" alt="{{this.title}}">
                                            </a>
                                        </div>
                                        <div class="col-md-8 p-4 no-gutters d-flex flex-column">
                                            <h2 class="card-title">
                                                <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none">
                                                    {{this.title}}
                                                </a>
                                            </h2>
                                            <a href="{{#if ../user}}/main/category/{{this.categoryId}}{{else}}/home/category/{{this.categoryId}}{{/if}}" class="text-decoration-none text-dark">
                                                <p class="card-text">{{this.category_name}}</p>
                                            </a>
                                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                                <p class="card-text truncate-2-line w-100">
                                                    {{this.abstract}}
                                                </p>
                                                <p class="card-text"><small class="text-muted">Ngày đăng: {{this.updated_at}}</small></p>
                                            </a>
                                            <div class="row pt-4">
                                                <div class="col d-flex align-items-start flex-column justify-content-center">
                                                    <p class="card-text text-center">Lượt thích: {{this.likes}}</p>
                                                </div>
                                                <div class="col d-flex align-items-end flex-column justify-content-center">
                                                    <p class="card-text">Lượt xem: {{this.views}}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </button>
                </div>
                {{else}}
                <div>Chưa có tin nổi bật nào! </div>
                {{/if}}
            </div>

            {{#if topCategories}}
            {{#each topCategories}}
                <div class="container mt-4">
                    <h4 class="mb-3 text-primary">
                        <a href="#" class="text-decoration-none">
                            {{@key}}
                        </a>
                    </h4>
                    {{#if (ifCond (length this) ">=" 2)}}
                        <div class="row vertical-divider">
                            {{#with this.[0]}}
                                <div class="col-md-8">
                                    <div class="card border-0">
                                        <a href="{{#if ../../user}}/main/post/{{id}}{{else}}/home/post/{{id}}{{/if}}">
                                            <img src="/public/posts/imgs/{{id}}/thumbnail.jpg" class="card-img-top" alt="Main Image">
                                        </a>
                                        <div class="card-body p-0 mt-2">
                                            <a href="{{#if ../../user}}/main/post/{{id}}{{else}}/home/post/{{id}}{{/if}}" class="text-decoration-none text-dark">
                                                <h5 class="font-weight-bold">{{title}}:
                                                    <span class="font-italic">{{abstract}}</span>
                                                </h5>
                                            </a>
                                            <p class="text-muted">{{updated_at}}</p>
                                        </div>
                                    </div>
                                </div>
                            {{/with}}

                            <div class="col-md-4">
                                {{#each this}}
                                    {{#unless @first}}
                                        <div class="mb-3">
                                            <img src="/public/posts/imgs/{{id}}/thumbnail.jpg" class="img-fluid rounded" alt="/public/posts/imgs/{{id}}/thumbnail.jpg">
                                            <a href="{{#if ../../user}}/main/post/{{id}}{{else}}/home/post/{{id}}{{/if}}" class="text-decoration-none text-dark">
                                                <h5 class="font-weight-bold">{{title}}:
                                                    <span class="font-italic">{{abstract}}</span>
                                                </h5>
                                            </a>
                                            <p class="text-muted">{{updated_at}}</p>
                                        </div>
                                    {{/unless}}
                                {{/each}}
                            </div>
                        </div>
                    {{else}}
                        <div class="row">
                            {{#each this}}
                                <div class="col">
                                    <div class="card mb-3">
                                        <a href="{{#if ../user}}/main/post/{{id}}{{else}}/home/post/{{id}}{{/if}}">
                                            <img src="/public/posts/imgs/{{id}}/thumbnail.jpg" alt="..." width="100%" height="100%" class="img-fluid rounded-top">
                                        </a>
                                        <div class="card-body">
                                            <a href="{{#if ../user}}/main/post/{{id}}{{else}}/home/post/{{id}}{{/if}}" class="text-decoration-none text-dark">
                                                <h5 class="font-weight-bold">{{title}}:
                                                    <span class="font-italic">{{abstract}}</span>
                                                </h5>
                                            </a>
                                            <p class="card-text"><small class="text-muted">{{updated_at}}</small></p>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/if}}
                </div>
            {{/each}}
            {{else}}
            <div>Chưa có tin theo chủ đề nào, hãy dùng file database/sample.sql để tạo</div>
            {{/if}}


        </div>

        <div id="sidebar-news" class="col-md-3">
            <div class="container mt-4">
                <div id="sidebar-header">
                    <div class="slider bg-primary" id="slider"></div>
                    <div class="button active" id="latest">
                        Tin mới nhất
                    </div>
                    <div class="button inactive" id="most-views">
                        Xem nhiều
                    </div>
                </div>
                <div id="latest-news" style="display: block">
                    {{#if latestPosts}}
                    {{#each latestPosts}}
                        <div class="card mb-3">
                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}">
                                <img src="/public/posts/imgs/{{this.id}}/thumbnail.jpg" alt="..."
                                     width="100%" height="100%" class="img-fluid card-img-top">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                        {{this.title}}
                                    </a>
                                </h5>
                                <a href="{{#if ../user}}/main/category/{{this.categoryId}}{{else}}/home/category/{{this.categoryId}}{{/if}}" class="text-decoration-none text-dark">
                                    <p class="card-text">{{this.category_name}}</p>
                                </a>
                                <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                    <p class="card-text truncate-multi-line w-100">
                                        {{this.abstract}}
                                    </p>
                                </a>
                                <p class="card-text"><small class="text-muted">Ngày đăng: {{this.updated_at}}</small></p>
                            </div>
                        </div>
                    {{/each}}
                    {{else}}
                    <div>Chưa có tin mới nào! hãy dùng file database/sample.sql để tạo</div>
                    {{/if}}
                </div>
                <div id="most-views-news" style="display: none">
                    {{#each mostViewPosts}}
                        <div class="card mb-3">
                            <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}">
                                <img src="/public/posts/imgs/{{this.id}}/thumbnail.jpg" alt="..."
                                     width="100%" height="100%" class="img-fluid card-img-top">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                        {{this.title}}
                                    </a>
                                </h5>
                                <a href="#" class="text-decoration-none text-dark">
                                    <p class="card-text">{{this.category_name}}</p>
                                </a>
                                <a href="{{#if ../user}}/main/post/{{this.id}}{{else}}/home/post/{{this.id}}{{/if}}" class="text-decoration-none text-dark">
                                    <p class="card-text truncate-multi-line w-100">
                                        {{this.abstract}}
                                    </p>
                                </a>
                                <p class="card-text"><small class="text-muted">Ngày đăng: {{this.updated_at}}</small></p>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</main>
