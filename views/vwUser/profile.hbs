<div class="container mb-5">
    <div class="card mx-auto shadow-lg" style="max-width: 900px; margin-top: 50px; border-radius: 12px;">
        <div class="card-body">
            <!-- Profile Header -->
            <div class="text-center mb-4">
                <img src="{{user.imgURL}}"
                     alt="User Avatar"
                     class="rounded-circle border img-thumbnail
                         {{#if (ifCond user.role '===' 'admin')}}border-danger{{/if}}
                         {{#if (ifCond user.role '===' 'editor')}}border-success{{/if}}
                         {{#if (ifCond user.role '===' 'writer')}}border-warning{{/if}}
                         {{#if (ifCond user.role '===' 'subscriber')}}border-primary
                     {{else}}border-secondary{{/if}}"
                     style="width: 130px; height: 130px; object-fit: cover; border-width: 10px;">
                <h2 class="mt-3 mb-1">{{user.username}}</h2>
                <p class="mb-0"
                   {{#if (ifCond user.role '===' 'admin')}}style="color: #dc3545;"{{/if}}
                   {{#if (ifCond user.role '===' 'editor')}}style="color: #198754;"{{/if}}
                   {{#if (ifCond user.role '===' 'writer')}}style="color: #ffc107;"{{/if}}
                   {{#if (ifCond user.role '===' 'subscriber')}}style="color: #0d6efd;"{{/if}}>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shield-fill-check" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.8 11.8 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7 7 0 0 0 1.048-.625 11.8 11.8 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.54 1.54 0 0 0-1.044-1.263 63 63 0 0 0-2.887-.87C9.843.266 8.69 0 8 0m2.146 5.146a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793z"/>
                    </svg>
                    <span>{{user.role}}</p>
                </p>
            </div>

            <!-- Personal Information Section -->
            <div class="row">
                <div class="col mx-auto">
                    <h4 class="text-primary border-bottom pb-2 mb-3">Personal Information</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>Pen Name:</strong></span>
                            <span>{{user.penName}}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>Email:</strong></span>
                            <span>{{user.email}}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>Birthday:</strong></span>
                            <span>{{#if user.birthday}}{{user.birthday}}{{else}}Not Provided{{/if}}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>Created At:</strong></span>
                            <span>{{user.created_at}}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>Updated At:</strong></span>
                            <span>{{user.updated_at}}</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Edit Profile Button -->
            <div class="text-center mt-4">
                <a href="edit" class="btn btn-primary btn-lg px-4">Edit Profile</a>
            </div>
            <div class="mt-2">
                <a href="/main" style="background-color: grey;" class="btn btn-sm">Back to main page</a>
            </div>
        </div>
    </div>
</div>
